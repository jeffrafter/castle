<h1>Listing areas</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Country code</th>
    <th>Area code</th>
    <th>Region</th>
  </tr>

<% for area in @areas %>
  <tr>
    <td><%=h area.name %></td>
    <td><%=h area.country_code %></td>
    <td><%=h area.area_code %></td>
    <td><%=h area.region_id %></td>
    <td><%= link_to 'Show', area %></td>
    <td><%= link_to 'Edit', edit_area_path(area) %></td>
    <td><%= link_to 'Destroy', area, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

