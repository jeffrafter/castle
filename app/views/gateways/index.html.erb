<h1>Listing gateways</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Active</th>
    <th>Locale</th>
    <th>Region</th>
  </tr>

<% for gateway in @gateways %>
  <tr>
    <td><%=h gateway.number %></td>
    <td><%=h gateway.active %></td>
    <td><%=h gateway.locale %></td>
    <td><%=h gateway.region.name %></td>
    <td><%= link_to 'Show', gateway %></td>
    <td><%= link_to 'Edit', edit_gateway_path(gateway) %></td>
    <td><%= link_to 'Destroy', gateway, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

