<h1>Send Message</h1>

<% form_for(:sms) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= carrier_select('sms[carrier_name]', "Please choose a carrier") %>
  </p>
  <p>
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </p>
  <p>
    <%= f.label :from %><br />
    <%= f.text_field :from %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>